<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <data>
        <import type="android.view.View" />
        <variable
            name="Mainviewmodel"
            type="com.example.yogurt.model.Main_view_model" />
    </data>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:background="@drawable/background_batang"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_card"
                android:elevation="10dp"
                android:weightSum="4"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/shotcut_background"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/EMB_auto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="EMB\n자동"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:background="@drawable/shotcut_background"
                        >
                        <TextView
                            android:id="@+id/start_go"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="운행\n준비"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/shotcut_background_enabled"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/heal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="충전"
                            android:textAppearance="@style/MyFontSubTitlePopenabled"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:background="@drawable/shotcut_background"
                        >
                        <TextView
                            android:id="@+id/search_error"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Error"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/shotcut_background"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/lite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="라이트"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:background="@drawable/shotcut_background"
                        >
                        <TextView
                            android:id="@+id/hot_sun"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="열선"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/shotcut_background"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/sense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="센서"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:background="@drawable/shotcut_background"
                        >
                        <TextView
                            android:id="@+id/LED"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="LED"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:elevation="10dp"
                android:weightSum="2"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_card"
                        android:elevation="10dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textAppearance="@style/MyFontSubTitlebigPop"
                            android:text="냉장고"
                            android:layout_marginLeft="10dp"
                            android:gravity="center|left"
                            >
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:text="2C"
                            android:textColor="@color/notice"
                            android:gravity="center"
                            >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_card"
                        android:elevation="10dp"
                        android:layout_weight="1"
                        android:text="-10C"
                        android:gravity="center"
                        android:textAppearance="@style/MyFontSubTitlePop"
                        android:layout_margin="10dp"
                        android:textColor="@color/ice"
                        ></TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_card"
                        android:text="-10C"
                        android:gravity="center"
                        android:textAppearance="@style/MyFontSubTitlePop"
                        android:elevation="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/ice"
                        ></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:weightSum="15"
                android:gravity="left"
                >
                <Switch
                    android:id="@+id/switchspeed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="  고속"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/white"
                    android:textAppearance="@style/MyFontSubTitlebigPop"
                    android:background="@drawable/border_card"
                    ></Switch>
                <TextView
                    android:id="@+id/system"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:text="시스템"
                    android:gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:textAppearance="@style/MyFontSubTitlebigPophight"
                    android:background="@drawable/border_card_button"
                    ></TextView>
                <TextView
                    android:id="@+id/brea"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:text="Break"
                    android:gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:textAppearance="@style/MyFontSubTitlebigPophight"
                    android:background="@drawable/border_card_button"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@{Mainviewmodel.lati}"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:layout_margin="10dp"
                    android:textAppearance="@style/MyFontSubTitlebigPop"
                    android:background="@drawable/border_card"
                    ></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@{Mainviewmodel.longti}"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:textAppearance="@style/MyFontSubTitlebigPop"
                    android:background="@drawable/border_card"
                    ></TextView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/ghost"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/speedtime"
                    android:scaleType="fitCenter"
                    ></ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/time"
                    android:scaleType="fitCenter"
                    android:rotation="225"
                    ></ImageView>
                <TextView
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="350dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="0"
                    android:gravity="center"
                    android:textAppearance="@style/MyFontSubTitlebigPop"
                    android:textSize="50dp"
                    ></TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/border_card"
                android:elevation="10dp"
                android:weightSum="10"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/MyFontSubTitlebigPophight"
                    android:text="지도"
                    android:layout_weight="0.5"
                    ></TextView>
                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9.5"
                    ></RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>