<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:innerRadiusRatio="2.4"
    android:shape="oval"
    android:thickness="11dp"
    android:useLevel="false"
    >
    <gradient
        android:type="radial"
        android:startColor="@color/colorPrimaryLight"
        android:centerColor="@color/colorPrimaryLight3"
        android:endColor="@color/colorPrimaryDark2"
        android:gradientRadius="100"
        android:angle="270"
        android:centerX="50%"
        android:centerY="50%"
        />
    <corners
        android:radius="1000dp"
        >
    </corners>
    <size
        android:width="60dp"
        android:height="60dp"

        ></size>
    <stroke
        android:width="0.4dp"
        android:color="@color/accent"
        ></stroke>
</shape>