<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="250"
                        android:angle="270"
                        android:centerX="50%"
                        android:centerY="50%"

                        />
                    <corners
                        android:radius="1500dp"
                        >

                    </corners>
                    <size
                        android:width="200dp"
                        android:height="200dp"
                        ></size>
                </shape>
            </item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="200dp"
                        />
                    <gradient
                        android:angle="90"
                        android:centerX="30%"
                        android:centerColor="@color/progress_Start"
                        android:startColor="#1A08c3fa"
                        android:endColor="@color/progress_Start"
                        android:type="linear"
                        />
                    <size
                        android:width="200dp"
                        android:height="200dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorPrimaryDark"
                        />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="200dp"
                        />

                    <gradient
                        android:angle="90"
                        android:centerX="70%"
                        android:centerColor="@color/progress_Start"
                        android:startColor="@color/progress_Start"
                        android:endColor="#2608c3fa"
                        android:type="linear"
                        />

                    <size
                        android:width="200dp"
                        android:height="200dp"
                        />
                </shape>
            </item>
            <!-- the glow for the half circles, possible with radius as well. I liked
                 android:type="sweep" better because radius tends to fade out.-->
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="200dp"
                        />

                    <gradient
                        android:angle="360"
                        android:centerX="5%"
                        android:centerColor="#1A08c3fa"
                        android:gradientRadius="360"
                        android:type="sweep"
                        />

                    <size
                        android:width="200dp"
                        android:height="200dp"
                        />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="200dp"
                        />

                    <gradient
                        android:angle="360"
                        android:centerX="95%"
                        android:centerColor="@color/progress_Start"
                        android:startColor="#1A08c3fa"
                        android:endColor="#1A08c3fa"
                        android:gradientRadius="360"
                        android:type="sweep"
                        />

                    <size
                        android:width="200dp"
                        android:height="200dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>