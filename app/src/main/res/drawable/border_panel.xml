<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <padding android:top="3dp" android:left="3dp" android:bottom="3dp" android:right="3dp" />
            <stroke android:color="@color/colorPrimaryLight3" android:width="1dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <padding android:top="2dp" android:left="2dp" android:bottom="2dp" android:right="2dp" />
            <gradient
                android:angle="270"
                android:type="linear"
                android:startColor="@color/colorPrimaryLight2"
                android:endColor="@color/colorPrimaryLight3"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>
